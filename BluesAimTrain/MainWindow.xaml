<Window x:Class="BluesAimTrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="CanResize"
        Height="600"
        Width="800"
        Background="#101"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <!-- GAME GRID -->
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CUSTOM TITLE BAR -->
        <DockPanel Grid.Row="0" Background="#1C1C1C" MouseDown="TitleBar_MouseDown">
            <TextBlock Text="BluesAimTrain" FontFamily="Segoe UI Black" FontSize="24" FontWeight="Bold" Foreground="RoyalBlue" VerticalAlignment="Center" Margin="10,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="✕" ToolTip="Close" Foreground="RoyalBlue" Background="White" Click="CloseButton_Click"/>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="⬜" ToolTip="Maximize / Restore" Foreground="RoyalBlue" Background="White" Click="MaxRestoreButton_Click"/>
            <Button Width="32" Height="24" DockPanel.Dock="Right" Content="—" ToolTip="Minimize" Foreground="RoyalBlue" Background="White" Click="MinimizeButton_Click"/>
            <Button Name="ResetButton" Width="32" Height="24" DockPanel.Dock="Right" Content="⟳" ToolTip="Reset Stats" Background="White" Foreground="DarkRed" Click="ResetButton_Click"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0" DockPanel.Dock="Right">
                <TextBlock Name="ScoreTextBlock" Text="Score: 0" Foreground="White" FontSize="14" Margin="0,0,10,0"/>
                <TextBlock Name="AccuracyTextBlock" Text="Accuracy: 0%" Foreground="White" FontSize="14" Margin="10,0"/>
            </StackPanel>
            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="#444"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#333"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#555"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Resources>
        </DockPanel>

        <!-- MAIN CONTENT -->
        
        <Grid Grid.Row="1">
            <Canvas Name="GameCanvas" Background="#FF2E2E2E"/>
            <StackPanel Name="ControlPanel" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Background="#222"/>
            <TextBlock x:Name="StartupMessage" Text="No pressure. Press ESC to play/pause" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" TextAlignment="Center"/>

            <!-- PAUSE OVERLAY -->
            <Border x:Name="PauseOverlayBorder" Background="#FF102A5C" BorderBrush="#FF4169E1" BorderThickness="4" CornerRadius="12" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <Grid x:Name="PauseOverlay" Background="#FF102A5C" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title spanning all columns -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   Text="BluesAimTrain" FontFamily="Segoe UI Black" FontSize="18" FontWeight="Bold"
                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- LEFT: Presets Panel -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#222" Padding="20" Width="200" Height="400" Margin="0,0,20,0" BorderBrush="#FF4169E1" BorderThickness="3" CornerRadius="6">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock Text="Presets" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Default" Name="PresetDefault" Margin="0,5" Height="35"/>
                            <Button Content="Beginner" Name="PresetBeginner" Margin="0,5" Height="35"/>
                            <Button Content="Casual" Name="PresetCasual" Margin="0,5" Height="35"/>
                            <Button Content="Pro" Name="PresetPro" Margin="0,5" Height="35"/>
                        </StackPanel>
                    </Border>

                    <!-- MIDDLE: Pause Menu -->
                    <Border Grid.Row="1" Grid.Column="1" Background="#333" Padding="20" Width="300" Height="400" Margin="0,0,20,0" BorderBrush="#FF4169E1" BorderThickness="3" CornerRadius="6">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock Text="Pause Menu" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <Button Name="RandomColorButton" Content="Rng Color" Width="60" Height="28" FontSize="11" HorizontalAlignment="Left" Margin="0,0,0,10" Click="RandomColorButton_Click"/>
                            <TextBlock Text="Target Color:" Foreground="White" FontSize="11" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                <ComboBox x:Name="ColorPicker" SelectedIndex="0" FontSize="11" Width="120" Margin="0,0,10,0"/>
                                <CheckBox x:Name="CenterToggleButton" Content="Target Center" IsChecked="True" FontSize="11" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Target Size (px):" Foreground="White" FontSize="11" Margin="0,5"/>
                            <Slider Name="SizeSlider" Minimum="20" Maximum="100" Value="50" TickFrequency="5" FontSize="11" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                            <TextBlock Text="Spawn Delay (ms):" Foreground="White" FontSize="11" Margin="0,5"/>
                            <Slider Name="DelaySlider" Minimum="100" Maximum="2000" Value="800" TickFrequency="100" IsSnapToTickEnabled="True" FontSize="11" Margin="0,0,0,10"/>
                            <TextBlock Text="Target Lifetime (ms):" Foreground="White" FontSize="11" Margin="0,5"/>
                            <Slider Name="LifetimeSlider" Minimum="200" Maximum="5000" Value="1000" TickFrequency="100" IsSnapToTickEnabled="True" FontSize="11" Margin="0,0,0,10"/>
                            <Button Name="ResumeButton" Content="Resume Game" Width="120" Height="40" HorizontalAlignment="Center" FontSize="11" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- RIGHT: Previous Stats Panel -->
                    <Border x:Name="PreviousStatsGrid" Grid.Row="1" Grid.Column="2" Width="200" Height="400" Background="#222" Padding="20" BorderBrush="#FF4169E1" BorderThickness="3" CornerRadius="6">
                        <StackPanel VerticalAlignment="Top">
                            <!-- Header + Reset Button -->
                            <DockPanel Margin="0,0,0,20" LastChildFill="False">
                                <TextBlock Text="Previous Stats" FontSize="18" Foreground="White" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                                <Border CornerRadius="4" Background="#FF4169E1" BorderBrush="#FF63B8FF" BorderThickness="1" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                    <Button x:Name="ResetButtonPrevStats" Content="⟳" Width="28" Height="20" ToolTip="Reset Stats" Click="ResetButton_Click" Cursor="Hand" FontWeight="Bold" Foreground="White" Background="Transparent" BorderThickness="0">
                                        <Button.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                        </Button.Effect>
                                    </Button>
                                </Border>
                            </DockPanel>

                            <!-- Stats -->
                            <TextBlock x:Name="PrevScoreTextBlock" Text="Score: 0" Foreground="White" FontSize="11" Margin="0,0,0,5"/>
                            <TextBlock x:Name="PrevAccuracyTextBlock" Text="Accuracy: 0%" Foreground="White" FontSize="11" Margin="0,0,0,5"/>
                            <TextBlock x:Name="PrevTargetSettingsTextBlock" Text="Settings: Default" Foreground="White" FontSize="11" Margin="0,0,0,10"/>

                            <!-- Circular Heatmap at Bottom -->
                            <Border Width="147" Height="147" Background="#111" BorderBrush="#555" BorderThickness="1" CornerRadius="73" HorizontalAlignment="Center" VerticalAlignment="Bottom" ClipToBounds="True" Margin="0,10,0,0">
                                <Canvas x:Name="HeatmapCanvas" Width="117" Height="117" IsHitTestVisible="False"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
